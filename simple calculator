2). MainActivity.java calculater

import android.app.*;
import android.os.*;
import android.os.Bundle;
import android.app.Activity;
import android.view.Menu;
import android.os.Bundle;
import android.widget.*;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity extends Activity 
{
	Button button0, button1, button2, button3, button4, button5, button6,
	button7, button8, button9, buttonAdd, buttonSub, buttonDivision,
	buttonMul, button10, buttonC, buttonEqual;
    EditText spEditText;

    float mValueOne, mValueTwo;

    boolean Addition, Subtract, Multiplication, Division;
	
    @Override
    protected void onCreate(Bundle savedInstanceState)
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.main);
		button0 = (Button) findViewById(R.id.button0);
        button1 = (Button) findViewById(R.id.button1);
        button2 = (Button) findViewById(R.id.button2);
        button3 = (Button) findViewById(R.id.button3);
        button4 = (Button) findViewById(R.id.button4);
        button5 = (Button) findViewById(R.id.button5);
        button6 = (Button) findViewById(R.id.button6);
        button7 = (Button) findViewById(R.id.button7);
        button8 = (Button) findViewById(R.id.button8);
        button9 = (Button) findViewById(R.id.button9);
        button10 = (Button) findViewById(R.id.button10);
        buttonAdd = (Button) findViewById(R.id.buttonadd);
        buttonSub = (Button) findViewById(R.id.buttonsub);
        buttonMul = (Button) findViewById(R.id.buttonmul);
        buttonDivision = (Button) findViewById(R.id.buttondiv);
        buttonC = (Button) findViewById(R.id.buttonC);
        buttonEqual = (Button) findViewById(R.id.buttoneql);
        spEditText = (EditText) findViewById(R.id.edt1);


        button1.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "1");
				}
			});

        button2.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "2");
				}
			});

        button3.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "3");
				}
			});

        button4.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "4");
				}
			});

        button5.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "5");
				}
			});

        button6.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "6");
				}
			});

        button7.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "7");
				}
			});

        button8.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "8");
				}
			});

        button9.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "9");
				}
			});

        button0.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + "0");
				}
			});

        buttonAdd.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {

					if (spEditText == null) {
						spEditText.setText("");
					} else {
						mValueOne = Float.parseFloat(spEditText.getText() + "");
						Addition = true;
						spEditText.setText(null);
					}
				}
			});

        buttonSub.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					mValueOne = Float.parseFloat(spEditText.getText() + "");
					Subtract = true;
					spEditText.setText(null);
				}
			});

        buttonMul.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					mValueOne = Float.parseFloat(spEditText.getText() + "");
					Multiplication = true;
					spEditText.setText(null);
				}
			});

        buttonDivision.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					mValueOne = Float.parseFloat(spEditText.getText() + "");
					Division = true;
					spEditText.setText(null);
				}
			});

        buttonEqual.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					mValueTwo = Float.parseFloat(spEditText.getText() + "");

					if (Addition == true) {
						spEditText.setText(mValueOne + mValueTwo + "");
						Addition = false;
					}

					if (Subtract == true) {
						spEditText.setText(mValueOne - mValueTwo + "");
						Subtract = false;
					}

					if (Multiplication == true) {
						spEditText.setText(mValueOne * mValueTwo + "");
						Multiplication = false;
					}

					if (Division == true) {
						spEditText.setText(mValueOne / mValueTwo + "");
						Division = false;
					}
				}
			});

        buttonC.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText("");
				}
			});

        button10.setOnClickListener(new View.OnClickListener() {
				@Override
				public void onClick(View v) {
					spEditText.setText(spEditText.getText() + ".");
				}
			});
    }
}

